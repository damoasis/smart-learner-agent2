# =====================================================
# 智能学习助手Agent - 环境变量配置示例
# 复制此文件为 .env 并填写实际值
# =====================================================

# 应用基础配置
APP_NAME=Smart Learner Agent
APP_VERSION=0.1.0
APP_ENV=development
LOG_LEVEL=INFO
SECRET_KEY=your-secret-key-here-change-in-production

# 数据库配置
DATABASE_URL=postgresql+psycopg2://postgres:password@localhost:5432/smart_learner_db
DB_ECHO=false

# Redis配置（未来使用）
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# OpenAI配置
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_TEMPERATURE=0.7
EMBEDDING_MODEL=text-embedding-ada-002
OPENAI_MAX_TOKENS=2000

# API配置
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true
API_WORKERS=1

# 多租户配置
DEFAULT_TENANT_ID=00000000-0000-0000-0000-000000000001
ENABLE_RLS=true

# JWT配置
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440

# 在线搜索配置（阶段二新增）
SERP_API_KEY=
GOOGLE_CSE_API_KEY=
GOOGLE_CSE_ID=
TAVILY_API_KEY=
JINA_API_KEY=

# 缓存配置
ENABLE_LLM_CACHE=true
LLM_CACHE_TTL=3600
ENABLE_QUERY_CACHE=true
QUERY_CACHE_TTL=600

# 教学配置
DEFAULT_TEACHING_MODE=socratic
EXPLANATION_MAX_WORDS=250
ENABLE_AUTO_MODE_SWITCH=true
MODE_SWITCH_THRESHOLD=3

# 阶段二增强功能配置
ENABLE_CONTENT_VALIDATION=false
ENABLE_MNEMONIC=false
VALIDATION_CONFIDENCE_THRESHOLD=0.8
MNEMONIC_TRIGGER_THRESHOLD=not_understood

# 向量搜索配置
VECTOR_DIMENSION=1536
VECTOR_INDEX_LISTS=100
VECTOR_TOP_K=5

# Sentry配置（生产环境使用）
SENTRY_DSN=
ENABLE_SENTRY=false

# 性能监控
ENABLE_PROMETHEUS=false
PROMETHEUS_PORT=9090

# CORS配置
ENABLE_CORS=true
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
ENABLE_API_DOCS=true